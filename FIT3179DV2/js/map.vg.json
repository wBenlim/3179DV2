{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Melbourne tourism and its inpact on the regional Economic Growth Over Time (2014â€“2024)",
  "width": 600,
  "height": 500,

  "params": [
    {
      "name": "Year",
      "value": 2014,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2024,
        "step": 1
      }
    },
    {
      "name": "Tourism_indicator",
      "value": "Grossvalueaddedinmillions",
      "bind": {
        "input": "select",
        "options": [
          "Grossvalueaddedinmillions",
          "Grossregionalproductinmillions", 
          "TotalVisitorsinthousands"
        ],
        "labels": [
          "Gross value added in millions",
          "Gross regional product in millions", 
          "Number of tourists"
        ]
      }
    }, 
    {
      "name": "zoom",
      "value": 6000,
      "bind": {"input": "range", "min": 2000, "max": 12000, "step": 500}
    }
  ],
  

  "layer": [
    {
      "mark": {"type": "rect", "fill": "#cce5ff"}  
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wBenlim/3179DV2/main/FIT3179DV2/js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#d9e3cc", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wBenlim/3179DV2/main/FIT3179DV2/js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": "transparent", "stroke": "red", "opacity": 0.3}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wBenlim/3179DV2/main/FIT3179DV2/data/Dv2dataset1.csv"
      },
      "transform": [
        {
          "fold": [
            "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023", "2024"
          ],
          "as": ["year", "value"]
        },
        {"calculate": "toNumber(datum.year)", "as": "year_num"},
        {"filter": "datum.year_num == Year"},
        {"filter": "datum.label == Tourism_indicator"}
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "black",
        "strokeWidth": 0.3
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "value",
          "type": "quantitative",
          "title": "Value (Selected Year)"
        },
        "color": {
          "field": "value",
          "type": "quantitative",
          "scale": {"range": ["#fdd49e", "#fdbb84", "#e34a33"]},
          "title": "Value (Selected Year)"
        },
        "tooltip": [
          {"field": "Region", "type": "nominal", "title": "Region"},
          {"field": "label", "type": "nominal", "title": "Indicator"},
          {"field": "year", "type": "ordinal"},
          {"field": "value", "type": "quantitative"}
        ]
      }
    }
  ],

  "projection": {"type": "mercator","center": [144.96, -37.81], "scale": {"expr": "zoom"}}
}